<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#075e55"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:text="Калькулятор"
        android:textAlignment="textEnd"
        android:textColor="#fffeff"
        android:textSize="20pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/calculator"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/second_coef"
        android:layout_width="235dp"
        android:layout_height="71dp"
        android:layout_marginTop="28dp"
        android:paddingStart="8dp"
        android:text="Введите второй коэффициент:"
        android:textColor="#065047"
        android:textSize="13pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_coef" />

    <TextView
        android:id="@+id/first_coef"
        android:layout_width="231dp"
        android:layout_height="77dp"
        android:layout_marginTop="124dp"
        android:fontFamily="arial"
        android:paddingStart="8dp"
        android:text="Введите первый коэффициент:"
        android:textColor="#065047"
        android:textSize="13pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <EditText
        android:id="@+id/a_coef"
        android:layout_width="163dp"
        android:layout_height="67dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#065047"
        android:textAlignment="center"
        android:textColor="#065047"
        android:textSize="13pt"
        app:layout_constraintStart_toEndOf="@+id/first_coef"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <EditText
        android:id="@+id/b_coef"
        android:layout_width="159dp"
        android:layout_height="73dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#065047"
        android:textAlignment="center"
        android:textColor="#065047"
        android:textSize="13pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/second_coef"
        app:layout_constraintTop_toBottomOf="@+id/a_coef" />

    <Button
        android:id="@+id/multi"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:textColor="#fffeff"
        android:textSize="17pt"
        android:background="#075e55"
        android:layout_marginTop="8dp"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        app:layout_constraintVertical_bias="0.054" />

    <Button
        android:id="@+id/minus"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#075e55"
        android:text="-"
        android:textColor="#fffeff"
        android:textSize="17pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/plus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/plus"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:textColor="#fffeff"
        android:textSize="17pt"
        android:background="#075e55"
        android:layout_marginTop="64dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_coef" />

    <Button
        android:id="@+id/division"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:textColor="#fffeff"
        android:textSize="14pt"
        android:background="#075e55"
        android:layout_marginTop="8dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multi"
        app:layout_constraintVertical_bias="0.045" />


</androidx.constraintlayout.widget.ConstraintLayout>