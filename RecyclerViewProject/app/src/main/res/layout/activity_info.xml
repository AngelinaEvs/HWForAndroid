<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity"
    android:background="#090c38">

    <TextView
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c4dcf7"
        android:fontFamily="arial"
        android:padding="8dp"
        android:text="Информация"
        android:textAlignment="center"
        android:textColor="#090c38"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planet_image"
        android:layout_width="372dp"
        android:layout_height="248dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/back_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information" />

    <ImageView
        android:id="@+id/image_planet"
        android:layout_width="184dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toBottomOf="@+id/planet_image"
        app:layout_constraintEnd_toEndOf="@+id/planet_image"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/planet_image"
        app:layout_constraintTop_toTopOf="@+id/planet_image"
        app:layout_constraintVertical_bias="0.548" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="379dp"
        android:layout_height="396dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planet_image">

        <TextView
            android:id="@+id/planet_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/back_shape"
            android:padding="16dp"
            android:text="fghsjkg"
            android:textColor="#090c38"
            android:textSize="18sp"
            android:textStyle="bold" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>